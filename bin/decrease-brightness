#!/bin/bash

if pgrep -af "/home/rickin/.local/share/bin/decrease-brightness" | grep -v "$$" > /dev/null; then
    exit
fi

current_value=$(($(brightnessctl get -m)*100/$(brightnessctl max)))

if [[ $current_value -lt 1 ]]; then
    exit
fi

